<%- include('partials/header') %>
<div class="login form-container">
    <h2><%= lang.login %></h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="email"><%= lang.email %></label>
            <input type="email" name="email" id="email" value="<%= locals.email || '' %>" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password"><%= lang.password %></label>
            <input type="password" name="password" id="password" class="form-control" />
            <a href="<%= uri.app.register %>"><i>Forgot Password?</i></a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><%= lang.login %></button>
            <%= lang.no_account_text %> <a href="<%= uri.app.register %>"><%= lang.register %></a>
        </div>
    </form>
</div>
<%- include('partials/footer') %>