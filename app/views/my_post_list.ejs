<%- include('partials/header') %>
<%- include('partials/menu') %>
<div class="postlist form-container">
    <h1><%= __('my_posts') %></h1>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
            
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th width="70%"><%= __('title') %></th>
          <th width="30%" align="center" class="aligncenter"><%= __('action') %></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < posts.length; i++) {%>
        <tr>
          <td><%= posts[i].title %></td>
          <td align="center" class="aligncenter">
            <a href="<%= uri.app.link.edit_post %><%= posts[i]._id %>" class="btn btn-primary"><%= __('edit') %></a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
</div>
<%- include('partials/footer') %>