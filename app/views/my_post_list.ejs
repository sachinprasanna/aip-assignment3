<%- include('partials/header') %>
<%- include('partials/menu') %>
<div class="postlist form-container">
    <h1><%= __('my_posts') %></h1>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
            
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th width="70%"><%= __('title') %></th>
          <th width="30%"><%= __('action') %></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < posts.length; i++) {%>
        <tr>
          <td><%= posts[i].title %></td>
          <td>
            <a href="/post/edit/<%= posts[i]._id %>" class="btn btn-primary"><%= __('edit') %></a>
            <!-- <a href="/post/delete/<%= posts[i]._id %>" class="btn btn-danger"><%= __('delete') %></a> -->
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
</div>
<%- include('partials/footer') %>